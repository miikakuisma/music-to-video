{
  "name": "audio-visualizer",
  "version": "1.0.0",
  "description": "Audio visualization and video generator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "music-metadata": "7.13.4",
    "wavesurfer.js": "^7.7.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.example.audiovisualizer",
    "productName": "Audio Visualizer",
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "src/**/*",
      "src/components/**/*",
      "assets/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
